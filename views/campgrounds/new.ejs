<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center;">create a new campground</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name"></input>
                </div>                
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="price/night" min="0.01" step="0.01"></input>
                </div>                 
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url"></input>
                </div>                 
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="description"></input>
                </div>                
                <div class="form-group">
                    <button class="tbn btn-lg btn-primary btn-block">submit</button>
                </div>        
            </form>
            <a href="/campgrounds">back</a>
        </div>
    </div>

<% include ../partials/footer %>